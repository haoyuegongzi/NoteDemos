<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/svRootShot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5ed9f0"
    tools:context="com.haoyue.notedemos.screenshots.ShotsViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvToUtilsActivity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#00bfff"
            android:gravity="center"
            android:text="tvToUtilsActivity"
            android:textColor="#fd0189"
            android:textSize="18sp"/>


        <LinearLayout
            android:id="@+id/llShot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivYellowShot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zero01"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/zero04"/>
        </LinearLayout>

        <ScrollView
            android:id="@+id/svShot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/view06"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/view10"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</ScrollView>
