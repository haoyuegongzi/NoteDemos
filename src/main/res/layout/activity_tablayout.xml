<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.haoyue.notedemos.tablayout.TabLayoutActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fillViewport="false"
        app:layout_scrollFlags="scroll"
        app:tabBackground="@drawable/selected"
        app:tabIndicatorColor="#057523"
        app:tabSelectedTextColor="#057523"
        app:tabTextColor="#ff0000"
        app:tabTextAppearance="@style/TabLayout.ItemStyle"
        app:tabIndicatorHeight="2.0dp"
        app:tabMode="fixed"/>

</LinearLayout>
