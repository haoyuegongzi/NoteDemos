<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:background="#a2d0ff"
              android:orientation="horizontal"
              android:padding="5dp">

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="对象的Id， www.ifeng.com 使用Long类型作为EntityId，否则会报错。"
            android:lines="2"
            android:autoLink="all"
            android:textColorLink="#0000ff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDiscount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="折扣价:￥19.8"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:textColor="#ff0000"/>

            <!--删除线在java代码中添加-->
            <TextView
                android:id="@+id/tvOriginalPrice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="建议价:￥39.8"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:textColor="#b2b2b2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPackageMail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="包邮"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:textColor="#ff0000"/>

            <TextView
                android:id="@+id/tvHasSell"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="已售58397件"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:textColor="#b2b2b2"/>

            <TextView
                android:id="@+id/tvSellPosition"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="特卖商城"
                android:layout_marginLeft="5dp"
                android:gravity="right|center_vertical"
                android:textColor="#b2b2b2"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
